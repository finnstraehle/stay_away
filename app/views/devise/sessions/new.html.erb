<div class="container">
  <div class="devise-container form-container p-5">
    <h2 class="form-header mb-3">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
         <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="log-button">
        <%= f.button :submit, "Log in", class: "button mb-3" %>
      </div>
    <% end %>
    <div class="shared-links">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "shared-links" %><br />
    </div>
  </div>
</div>
