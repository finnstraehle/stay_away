<div class="page-center">
  <div class="page-container">
    <div class="container form-container p-5">
      <h2 class="form-header mb-3">Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Sign up", class: "button mb-3" %>
          <%= f.button :submit, "Login", class: "button mb-3 btn-login" %>
        </div>
      <% end %>
      <div class="shared-links">
        <%= link_to "Log in", new_session_path(resource_name), class: "display-none" %><br />
      </div>
    </div>
  </div>
</div>
