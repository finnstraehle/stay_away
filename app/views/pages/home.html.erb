<div class="homepage">
  <div class="home-container">
    <div class="search-box">
      <div class="form-container">
        <h1>Are you ready to sail the sea?</h1>
        <%= render "shared/search" %>
      </div>
    </div>
  </div>
  <div class="boats-down">
    <button class="boats-down-button" onClick="document.getElementById('boat-home-list').scrollIntoView({behavior: 'smooth'});" >
    <h3>Discover</h3>
    <i class="fa-solid fa-angles-down"></i></button>
  </div>
  <div class="container-big" id="boat-home-list">
    <div class="grid-boats">
      <% @boats = Boat.all %>
      <% @boats.each do |boat| %>
        <%= link_to boat, class: "card-boat" do %>
          <div class="boat-image">
            <% boat.photos.each do |photo| %>
              <%= cl_image_tag photo.key %>
            <% end %>
          </div>
          <div class="star-icon"><%= icon('fas', 'star',) %></div>
          <div class="boat-infos">
            <h4><%= boat.name %></h4>
            <p><%= boat.description %></p>
            <div class="boat-details">
              <p><%= boat.guests %> Guests</p>
              <span><%= "$#{boat.price}" %> / week</span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="show-map-btn">
   <a href="<%= map_path %>" class="button" style="border-radius: 100%; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);"><i class="fa-regular fa-map" style="font-size: 20px; padding: 10px; margin-bottom: 5px; margin-top: 5px;"></i></a>
</div>
