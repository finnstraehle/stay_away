<h1>My Listings</h1>
<div class="listings">
  <div style="text-align: center; margin-bottom: 20px;"><%= link_to "+ add listing", listings_path, class: "add-button"%></div>
  <% @listings.each do |listing| %>
    <div class="listing-card">
      <div class="listing-card-content">
        <%= link_to listing do %>
          <p><small><%= listing.name %></small></p>
        <% end %>
        <p><%= listing.description %></p>
      </div>
      <div class="listing-card-actions">
        <%= link_to "Edit", listings_path %> <!-- change -->
        <%= link_to "Delete", listings_path %> <!-- data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  -->
      </div>
    </div>
  <% end %>
</div>
